---
import Plasma from '../components/Plasma.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Faster Disco" description="Disco is not dead.">
    <Plasma client:load />
    <header class="fasterdisco-hero-header">
        <h1 class="fasterdisco-hero-header-h1">Faster Disco</h1>
    </header>
    <main class="fasterdisco-main">
        <article class="fasterdisco-statement">Disco is not dead.</article>
    </main>
</Layout>

<style lang="scss">
    .fasterdisco-hero-header {
        display: flex;
        flex-direction: column;
        justify-content: center;
        margin: 0;
        padding: 0;
        position: absolute;
        height: 100%;
        width: 100%;

        .fasterdisco-hero-header-h1 {
            animation: opaque-then-fade-in 2s;
            color: #fdfde8;
            font-display: block;
            font-family: 'Paytone One', sans-serif;
            font-size: 16vw;
            letter-spacing: -0.05em;
            line-height: 0.85em;
            margin: 0;
            padding: 0;
            text-align: center;
            text-shadow: #3b2e36 0.25vw 0.5vw, #d6bb7a 0.5vw 1vw,
                #e06830 0.75vw 1.5vw, #802078 1vw 2vw;
            width: 100%;
        }
    }

    @keyframes opaque-then-fade-in {
        0% {
            opacity: 0;
        }
        50% {
            opacity: 0;
        }
        100% {
            opacity: 1;
        }
    }

    .fasterdisco-main {
        bottom: 0;
        padding: 1vw;
        position: fixed;
        text-align: center;
        width: 100%;

        .fasterdisco-statement {
            background-color: rgba(0, 0, 0, 0.5);
            border-radius: 0.5em;
            color: #fdfde8;
            display: inline-block;
            /* https://markdotto.com/2018/02/07/github-system-fonts/#the-stack */
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI',
                Helvetica, Arial, sans-serif, 'Apple Color Emoji',
                'Segoe UI Emoji', 'Segoe UI Symbol';
            font-size: 1em;
            margin: 0;
            padding: 1em;
        }
    }
</style>
